<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Sistema de prestamos", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                @if (User.Identity.IsAuthenticated)
                {
                    string action_cliente = "";
                <ul class="nav navbar-nav">
                    @if (User.IsInRole("Administrador"))
                    {
                         action_cliente = "Index";
                    }
                    else
                    {
                         action_cliente = "Create";
                    }

                    <li>@Html.ActionLink("Clientes", @action_cliente, "Clientes")</li>
                    @if (User.IsInRole("Administrador"))
                    {
                        <li>@Html.ActionLink("Prestadores", "Index", "Prestadores")</li>
                    }
                    <li role="presentation" class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
                            Prestamos <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Crear", "Create", "Prestamo")</li>
                            <li>@Html.ActionLink("Cuotas", "Cuotas", "Prestamo")</li>

                            @if (User.IsInRole("Administrador"))
                            {
                                <li>@Html.ActionLink("Ganancias", "Ganancias", "Prestamo")</li>
                                <li>@Html.ActionLink("Moras", "Moras", "Prestamo")</li>
                            }
                        </ul>
                    </li>
                    @if (User.IsInRole("Administrador"))
                    {
                        <li role="presentation" class="dropdown">
                            <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
                                Reportes <span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Prestamo Mensual", "Mensual", "Reportes")</li>
                                <li>@Html.ActionLink("Prestamo Anual", "Anual", "Reportes")</li>
                                <li>@Html.ActionLink("Cuota de pago Cliente", "ClienteCuota", "Reportes")</li>
                                <li>@Html.ActionLink("Moras", "Moras", "Reportes")</li>


                            </ul>
                        </li>
                    }
                    @*<li>@Html.ActionLink("Contact", "Contact", "Home")</li>*@
                </ul>
                }
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer class="no-print">
            <p>&copy; @DateTime.Now.Year - Hecho con amor por Eimi Rosalia</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
